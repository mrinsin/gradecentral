<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Letter grade</th>
      <th>Comment</th>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @ability.can? :read, @grade, user_id: current_user.id %>
      <tr>
        <td><%= @grade.letter_grade %></td>
        <td><%= @grade.comment %></td>
        <td><%= @grade.course %></td>
        <td><%= @grade.user.email %></td>
        <td><%= link_to 'Show', @grade %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @ability.can? :manage, Grade %>
  <%= link_to 'Edit', edit_grade_path(@grade) %> |
  <%= link_to 'Back', grades_path %>
<% end %>
